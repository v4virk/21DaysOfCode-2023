                                                     QUE1

    #include <stdio.h>
    int main()
    {
        int i, j, temp, n;
        printf("Enter the value of n \n");
        scanf("%d", &n);
        printf("Enter the elemnets of array\n");
        int arr[n];
        for (i = 0; i < n; i++)
        {
            scanf("%d", &arr[i]);
        }
        for (i = 0; i < n; i++) 
        {
 
            for (j = i + 1; j < n; j++)
            {
 
                if (arr[i] > arr[j]) 
                {
 
                    temp =  arr[i];
                    arr[i] = arr[j];
                    arr[j] = temp;
 
                }
 
            }
 
        }
 
        printf("The numbers arranged in ascending order are given below \n");
        for (i = 0; i < n; i++)
            printf("%d\n", arr[i]);
        printf("second smallest element is %d",arr[1]);
        return 0;
 
    }

