def find_common_elements(list1, list2):
    # Create a set to store unique common elements
    common_elements = set()

    # Iterate over elements in the first list
    for num in list1:
        # Check if the element exists in the second list
        if num in list2:
            # Add the common element to the set
            common_elements.add(num)

    # Convert the set to a list and return the result
    return list(common_elements)
list1 = [1, 2, 3, 4, 5]
list2 = [4, 5, 6, 7, 8]

common_elements = find_common_elements(list1, list2)
print(common_elements)  # Output: [4, 5]
