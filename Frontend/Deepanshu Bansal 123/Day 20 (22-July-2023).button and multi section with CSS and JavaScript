    <button class="button4">Fourth</button>

    <script>onclick=(button1)=>{
      alert("You click on button")
      let a=prompt("Enter you button name you click")
      if(a=="first" ||  a=="second")
      {
        confirm("Your button is correct")
      }
      else{
        confirm("Your button is not correct")
      }
    }
